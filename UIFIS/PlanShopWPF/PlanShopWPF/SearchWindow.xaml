<Window x:Class="PlanShopWPF.SearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlanShopWPF"
        mc:Ignorable="d"
        Title="SearchWindow" Height="450" Width="800">
    <Grid Margin="-27,-21,0,0">
        <TextBlock Text="Список: " HorizontalAlignment="Left" Margin="68,43,0,356" FontSize="24"/>
        <TextBlock Text="{Binding Title}" HorizontalAlignment="Left" Margin="204,43,0,357" Width="603" FontSize="22"/>
        <TextBlock Text="Пункты: " HorizontalAlignment="Left" Margin="68,174,0,225" FontSize="24"/>
        <TextBlock Text="{Binding IdProductNavigation.Title}" HorizontalAlignment="Left" Margin="204,172,0,227" Width="603" FontSize="22"/>
        <TextBlock Text="Дата создания: " HorizontalAlignment="Left" Margin="68,287,0,112" FontSize="24"/>
        <TextBlock Text="{Binding Data}" HorizontalAlignment="Left" Margin="269,287,0,112" Width="538" FontSize="22"/>
        <Button Name="BackBtn" Content="Вернуться" Click="BackBtn_Click" Margin="487,403,20,10"/>
        <Button Name="ListBtn" Content="Открыть для редактирования" Click="ListBtn_Click" Margin="68,398,439,15"/>
    </Grid>
</Window>
